<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.OTPScreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_60sdp"
            android:fontFamily="@font/metropolis_bold"
            android:text="@string/otplongtext"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/twentytwo"
            android:textStyle="bold"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/numbertext"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/thirtydp"
            android:fontFamily="@font/metropolis_regular"
            android:text="@string/otplongtext2"
            android:textAlignment="center"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/fourteensp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fiftydep"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:weightSum="4"
            android:gravity="center">

            <EditText
                android:id="@+id/ed1"
                android:layout_width="@dimen/sixtydp"
                android:layout_height="@dimen/sixtydp"
                android:layout_margin="@dimen/fivedp"
                android:layout_weight="1"
                android:background="@drawable/otptextbg"
                android:fontFamily="@font/metropolis_regular"
                android:gravity="center"
                android:hint="*"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/theme"
                android:textSize="@dimen/thirtydp"/>

            <EditText
                android:id="@+id/ed2"
                android:layout_width="@dimen/sixtydp"
                android:layout_height="@dimen/sixtydp"
                android:layout_weight="1"
                android:background="@drawable/otptextbg"
                android:layout_margin="@dimen/fivedp"
                android:fontFamily="@font/metropolis_regular"
                android:gravity="center"
                android:hint="*"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/theme"
                android:textSize="@dimen/thirtydp"/>

            <EditText
                android:id="@+id/ed3"
                android:layout_width="@dimen/sixtydp"
                android:layout_height="@dimen/sixtydp"
                android:layout_margin="@dimen/fivedp"
                android:layout_marginLeft="@dimen/fivedp"
                android:background="@drawable/otptextbg"
                android:fontFamily="@font/metropolis_regular"
                android:gravity="center"
                android:hint="*"
                android:layout_weight="1"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/theme"
                android:textSize="@dimen/thirtydp"/>

            <EditText
                android:id="@+id/ed4"
                android:layout_width="@dimen/sixtydp"
                android:layout_height="@dimen/sixtydp"
                android:layout_weight="1"
                android:layout_margin="@dimen/fivedp"
                android:layout_marginLeft="@dimen/fivedp"
                android:background="@drawable/otptextbg"
                android:fontFamily="@font/metropolis_regular"
                android:gravity="center"
                android:hint="*"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/theme"
                android:textSize="@dimen/thirtydp"/>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/otpverify_Layout"
            android:layout_width="@dimen/threehundred"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_80sdp"
            android:background="@drawable/btn_background">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/metropolis_regular"
                android:text="@string/login2"
                android:textColor="@color/white"
                android:textSize="@dimen/sixteensp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="@dimen/thirtyfive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/txt_timeCounter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:fontFamily="@font/metropolis_regular"
                    android:textAlignment="center"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/red"
                    android:textSize="@dimen/fourteensp"/>



            <LinearLayout
                android:id="@+id/resendOTPLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:fontFamily="@font/metropolis_regular"
                    android:text="@string/didntrecive"
                    android:textAlignment="center"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/fourteensp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/fivedp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:fontFamily="@font/metropolis_regular"
                    android:text="@string/click"
                    android:textAlignment="center"
                    android:textColor="@color/theme"
                    android:textSize="@dimen/fourteensp" />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/mainProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

</RelativeLayout>