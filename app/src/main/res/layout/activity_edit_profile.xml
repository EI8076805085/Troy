<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Activity.Profile.EditProfile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_background"
        android:elevation="@dimen/_5sdp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:background="@drawable/app_header"
            android:gravity="center"
            android:weightSum="2"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/fifteensp"
                    android:onClick="back"
                    android:src="@drawable/ic_baseline_keyboard_backspace_24"
                    app:tint="@color/white" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/twentydp"
                    android:fontFamily="@font/metropolissemibold"
                    android:singleLine="true"
                    android:text="@string/editdetails"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sixteensp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:gravity="center_vertical|end"
                android:onClick="help">


                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/twentydp"
                    android:src="@drawable/ic_help" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="@dimen/thirtydp"
                android:layout_height="@dimen/thirtydp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/twentydp"
                android:layout_marginTop="@dimen/ten"
                android:src="@drawable/ic_full_name"
                app:tint="@color/colorPrimary" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btn"
                    android:layout_marginLeft="@dimen/fourteensp"
                    android:layout_marginTop="@dimen/twentydp"
                    android:fontFamily="@font/metropolis_regular"
                    android:text="@string/fullname"
                    android:textColor="@color/darkgrey"
                    android:textSize="@dimen/tweleve" />

                <EditText
                    android:id="@+id/txt_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ten"
                    android:layout_marginRight="@dimen/fourtydp"
                    android:backgroundTint="@color/lightgrey"
                    android:fontFamily="@font/metropolis_regular"
                    android:hint="@string/name"
                    android:inputType="textCapSentences"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey"
                    android:textSize="@dimen/fourteensp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="@dimen/thirtydp"
                android:layout_height="@dimen/thirtydp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/twentydp"
                android:layout_marginTop="@dimen/ten"

                android:src="@drawable/ic_mobile_number"
                app:tint="@color/colorPrimary" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/btn"
                        android:layout_marginLeft="@dimen/fourteensp"
                        android:layout_marginTop="@dimen/twentydp"
                        android:fontFamily="@font/metropolis_regular"
                        android:text="@string/mobile"
                        android:textColor="@color/darkgrey"
                        android:textSize="@dimen/tweleve"/>

                    <TextView
                        android:id="@+id/txt_mobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/ten"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_marginRight="@dimen/fourtydp"
                        android:backgroundTint="@color/lightgrey"
                        android:fontFamily="@font/metropolis_regular"
                        android:hint="@string/enter_house_number"
                        android:inputType="number"
                        android:maxLength="10"
                        android:textColor="@color/dark_gray"
                        android:textColorHint="@color/grey"
                        android:textSize="@dimen/fourteensp" />

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginRight="@dimen/_35sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:background="@color/light_gray"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="@dimen/thirtydp"
                android:layout_height="@dimen/thirtydp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/twentydp"
                android:layout_marginTop="@dimen/ten"
                android:src="@drawable/ic_email"
                app:tint="@color/colorPrimary" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btn"
                    android:layout_marginLeft="@dimen/fourteensp"
                    android:layout_marginTop="@dimen/twentydp"
                    android:fontFamily="@font/metropolis_regular"
                    android:text="@string/email"
                    android:textColor="@color/darkgrey"
                    android:textSize="@dimen/tweleve" />

                <EditText
                    android:id="@+id/txt_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ten"
                    android:layout_marginRight="@dimen/fourtydp"
                    android:backgroundTint="@color/lightgrey"
                    android:fontFamily="@font/metropolis_regular"
                    android:hint="@string/enter_email"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey"
                    android:textSize="@dimen/fourteensp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_20sdp">

            <ImageView
                android:layout_width="@dimen/thirtydp"
                android:layout_height="@dimen/thirtydp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/twentydp"
                android:layout_marginTop="@dimen/ten"
                android:src="@drawable/ic_dob"
                app:tint="@color/colorPrimary"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btn"
                    android:layout_marginLeft="@dimen/fourteensp"
                    android:layout_marginTop="@dimen/twentydp"
                    android:fontFamily="@font/metropolis_regular"
                    android:text="@string/dob"
                    android:textColor="@color/darkgrey"
                    android:textSize="@dimen/tweleve"/>

                <EditText
                    android:id="@+id/txt_dob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ten"
                    android:layout_marginRight="@dimen/fourtydp"
                    android:backgroundTint="@color/lightgrey"
                    android:focusableInTouchMode="false"
                    android:fontFamily="@font/metropolis_regular"
                    android:hint="@string/enter_dob"
                    android:inputType="date"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey"
                    android:textSize="@dimen/fourteensp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/updateprofileLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fiftydep"
        android:layout_alignParentBottom="true"
        android:background="@color/theme">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/metropolis_regular"
            android:gravity="center"
            android:singleLine="true"
            android:textStyle="bold"
            android:text="@string/uploadprofile"
            android:textColor="@color/white"
            android:textSize="@dimen/eighteen" />
    </LinearLayout>

</RelativeLayout>